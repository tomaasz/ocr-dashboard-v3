# OCR Dashboard V2 - Environment Configuration
# Copy this file to .env and adjust values

# PostgreSQL Connection (required for full functionality)
OCR_PG_DSN=postgresql://user:password@localhost:5432/ocr_db

# Remote Worker Configuration
OCR_REMOTE_HOST=
OCR_REMOTE_USER=
OCR_REMOTE_REPO_DIR=

# Remote Desktop (WSL) Configuration  
OCR_REMOTE_DESKTOP_HOST=
OCR_REMOTE_DESKTOP_USER=
OCR_REMOTE_DESKTOP_WSL_DISTRO=

# Defaults
OCR_DEFAULT_WORKERS=2
OCR_DEFAULT_SCANS_PER_WORKER=2

# Limit Worker (optional)
LIMIT_WORKER_URL=

# Update Counts
OCR_UPDATE_COUNTS_ON_START=1
OCR_UPDATE_COUNTS_MIN_INTERVAL_SEC=900

# Default Proxy (optional; overrides config/proxies.json default)
OCR_PROXY_SERVER=http://54.37.252.57:3128
OCR_PROXY_USERNAME=proxyuser
OCR_PROXY_PASSWORD=

# Webshare IP sync (optional)
WEBSHARE_API_TOKEN=
WEBSHARE_IP_FILE=config/webshare_ip.txt
WEBSHARE_PROXY_MODE=direct
WEBSHARE_PLAN_ID=
WEBSHARE_PAGE_SIZE=100
WEBSHARE_COUNTRY_CODES=
WEBSHARE_MIN_VALID=1
WEBSHARE_ASSIGN_SEED=
